
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.cognizance.cognizance18.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffff">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/fav_events"
            android:background="@color/colorAccent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/events_you_may_like"
                android:layout_marginStart="7dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:id="@+id/events_head"/>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="24dp"
                android:layout_below="@id/events_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:id="@+id/events_recycler_view"
                tools:listitem="@layout/item_carousels"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spotlight_string"
                android:layout_marginStart="7dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"

                android:id="@+id/spot_light_head"/>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="24dp"
                android:layout_below="@id/spot_light_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/item_carousels"
                android:id="@+id/spot_light_recycler_view"/>
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workshops_string"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:id="@+id/workshops_head"/>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="24dp"
                android:layout_below="@id/workshops_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/item_carousels"
                android:id="@+id/workshops_recycler_view"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
